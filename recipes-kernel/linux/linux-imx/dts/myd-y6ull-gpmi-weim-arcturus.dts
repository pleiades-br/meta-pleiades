#include "myb-imx6ull-14x14-base.dts"

/ {
 	sound_card: sound-card {
                compatible = "simple-audio-card";
                simple-audio-card,format = "i2s";
                simple-audio-card,frame-master = <&dailink_master>;
                simple-audio-card,bitclock-master = <&dailink_master>;
                simple-audio-card,name = "max9867";
                status = "okay";
                simple-audio-card,routing =
                    "Left Line", "LOUT",
                    "Right Line", "ROUT";
                simple-audio-card,widgets =
                    "Headphones", "Headphones",
                    "Line", "Left Line",
                    "Line", "Right Line",
                    "Speaker", "Speaker";
                
                dailink_master: simple-audio-card,cpu {
                        sound-dai = <&sai2>;
                        clocks = <&clks IMX6UL_CLK_SAI2>;
                };

                simple-audio-card,codec{
                        sound-dai = <&max9867>;
                };

        };
    /delete-node/ sound;
};

/delete-node/ &backlight_display;
/delete-node/ &lcdif;

&can1 {
    status = "disabled";
};

&can2 {
    status = "disabled";
};

&i2c1 {
    status = "okay";
};

&i2c2 {
    /delete-node/ codec;
    /delete-node/ ft5x06;
    /delete-node/ ov2659;
};

&i2c3 {
    status = "okay";
};

&i2c4 {
	clock-frequency = <100000>;
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_i2c4>;
	status = "okay";

	max9867: max9867@18 {
		compatible = "maxim,max9867";
        clocks = <&clks IMX6UL_CLK_SAI2>;
		#sound-dai-cells = <0>;
		reg = <0x18>;
	};

    /* Temperature, humidty sensor */
	shtc3: shtc3@70 {
		compatible = "sensirion,shtc3";
		reg = <0x70>;
		sensirion,blocking-io;
	};
};

&uart2 {
    status = "disabled";
};

&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_uart3>;
	uart-has-rtscts;
	status = "okay";
};

&uart4 {
    status = "disabled";
};

&gpmi {
	pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_gpmi_nand_1>;
	nand-on-flash-bbt;
    status = "okay";
};

&ecspi2 {
    pinctrl-names = "default";
    pinctrl-0 = <&pinctrl_wifi_spi>;
    spi-max-frequency = <4000000>;
    spi-slave;
    status = "okay";
};

&iomuxc {
    pinctrl-names = "default";
	pinctrl-0 = <&pinctrl_hog_1>;
    imx6ul-evk {
        pinctrl_hog_1: hoggrp-1 {
            fsl,pins = <
                MX6UL_PAD_UART1_RTS_B__GPIO1_IO19   0x17059 /* SD1 CD */
                MX6UL_PAD_GPIO1_IO09__GPIO1_IO09    0x17059 /* LCD_DISP */
                MX6UL_PAD_NAND_CE1_B__GPIO4_IO14    0x17059 /* LTE Reset */
                MX6UL_PAD_LCD_DATA17__GPIO3_IO22    0x000010B0
            >;
        };

	    pinctrl_gpmi_nand_1: gpmi-nand-1 {
		    fsl,pins = <
			    MX6UL_PAD_NAND_CLE__RAWNAND_CLE         0xb0b1
			    MX6UL_PAD_NAND_ALE__RAWNAND_ALE         0xb0b1
			    MX6UL_PAD_NAND_WP_B__RAWNAND_WP_B       0xb0b1
			    MX6UL_PAD_NAND_READY_B__RAWNAND_READY_B 0xb000
			    MX6UL_PAD_NAND_CE0_B__RAWNAND_CE0_B     0xb0b1
			    MX6UL_PAD_NAND_RE_B__RAWNAND_RE_B       0xb0b1
			    MX6UL_PAD_NAND_WE_B__RAWNAND_WE_B       0xb0b1
			    MX6UL_PAD_NAND_DATA00__RAWNAND_DATA00   0xb0b1
			    MX6UL_PAD_NAND_DATA01__RAWNAND_DATA01   0xb0b1
			    MX6UL_PAD_NAND_DATA02__RAWNAND_DATA02   0xb0b1
			    MX6UL_PAD_NAND_DATA03__RAWNAND_DATA03   0xb0b1
			    MX6UL_PAD_NAND_DATA04__RAWNAND_DATA04   0xb0b1
			    MX6UL_PAD_NAND_DATA05__RAWNAND_DATA05   0xb0b1
			    MX6UL_PAD_NAND_DATA06__RAWNAND_DATA06   0xb0b1
			    MX6UL_PAD_NAND_DATA07__RAWNAND_DATA07   0xb0b1
		    >;
	    };

        pinctrl_i2c4: i2c4grp {
		    fsl,pins = <
			    MX6UL_PAD_UART2_RX_DATA__I2C4_SDA 0x4001b8b0
			    MX6UL_PAD_UART2_TX_DATA__I2C4_SCL 0x4001b8b0
		    >;
	    };

        pinctrl_wifi_ctrl: wifictrlgrp {
            fsl,pins =
                <MX6UL_PAD_CSI_DATA03__GPIO4_IO24		0x10b0>;	/* WIFI_WKUP_WLAN */
        };

        pinctrl_wifi_spi: wifispigrp {
            fsl,pins = <
                MX6UL_PAD_CSI_DATA01__ECSPI2_SS0		0x100b1	/* WIFI_SPI_CS */
                MX6UL_PAD_CSI_DATA00__ECSPI2_SCLK		0x100b1	/* WIFI_SPI_CLK */
                MX6UL_PAD_CSI_DATA03__ECSPI2_MISO		0x100b1	/* WIFI_SPI_MISO */
                MX6UL_PAD_CSI_DATA02__ECSPI2_MOSI		0x100b1 /* WIFI_SPI_MOSI */
            >;	
        };

        pinctrl_wifi_spi_int: wifispiintgrp {
            fsl,pins =
                <MX6UL_PAD_CSI_DATA07__GPIO4_IO28		0x10b0>;	/* WIFI_SPI_INTERRUPT_PIN */
        };

        pinctrl_wifi_reset_en: wifiresetengrp {
            fsl,pins =
                <MX6UL_PAD_CSI_VSYNC__GPIO4_IO19		0x10b0>;	/* WIFI_RESET */
        };

	    pinctrl_uart3: uart3grp {
		    fsl,pins = <
			    MX6UL_PAD_UART3_TX_DATA__GPIO1_IO24	0x3b0b1
			    MX6UL_PAD_UART3_RX_DATA__GPIO1_IO25	0x1b0b1
			    MX6UL_PAD_UART3_RTS_B__GPIO1_IO27	0x1b0b1
			    MX6UL_PAD_UART3_CTS_B__GPIO1_IO26	0x1b0b1
		    >;
	    };
    };
};

&usdhc1 {
	status = "okay";
};

&usdhc2 {
    #address-cells = <1>;
    #size-cells = <0>;
    pinctrl-names = "default";
    max-frequency = <50000000>;
    pinctrl-0 = <&pinctrl_usdhc2_alt &pinctrl_wifi>;
    bus-width = <4>;
    no-1-8-v;   /* force 3.3V VIO */
    non-removable;
    pm-ignore-notify;
    cap-power-off-card;
//    /delete-property/ wakeup-source;
    status = "disabled";

    brcmf: bcrmf@1 {
        reg = <1>;
        compatible = "brcm,bcm4329-fmac";
    };
};

