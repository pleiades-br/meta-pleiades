#include "imx8mp-verdin-dahlia.dtsi"

/ {
	reg_eth2phy: regulator-eth2phy {
		compatible = "regulator-fixed";
		enable-active-high;
		gpio = <&gpio_expander_21 4 GPIO_ACTIVE_HIGH>; /* ETH_PWR_EN */
		off-on-delay = <500000>;
		regulator-max-microvolt = <3300000>;
		regulator-min-microvolt = <3300000>;
		regulator-name = "+V3.3_ETH";
		startup-delay-us = <200000>;
		vin-supply = <&reg_3p3v>;
	};

 	sound_card: sound-card {
                compatible = "simple-audio-card";
                simple-audio-card,bitclock-master = <&dailink_master>;
                simple-audio-card,format = "i2s";
                simple-audio-card,frame-master = <&dailink_master>;
                simple-audio-card,name = "max9857";
                status = "okay";
                dailink_master: simple-audio-card,cpu {
                        sound-dai = <&sai1>;
                        /*system-clock-frequency = <&sound_osc 0>;*/
                        /*dai-tdm-slot-num = <2>;
                        dai-tdm-slot-width = <16>;*/
                        clocks = <&audiomix_clk IMX8MP_CLK_AUDIOMIX_SAI1_MCLK1>;
                };

                simple-audio-card,codec{
                        sound-dai = <&max9867>;
                };

        };

};

&fec {
	phy-supply = <&reg_eth2phy>;
	status = "okay";
};

&gpio_expander_21 {
	status = "okay";
	vcc-supply = <&reg_1p8v>;
};

/* Verdin I2C_1 */
&i2c1 {
	status = "okay";
	
};

&i2c3 {
	status = "okay";

};

&i2c4 {
	/* Audio Codec */
	nau8822_1a: codec-nau@1a {
		compatible = "nuvoton,nau8822";
		#sound-dai-cells = <0>;
		reg = <0x1a>;
	};

	max9867: max9867@18 {
		compatible = "maxim,max9867";
		#sound-dai-cells = <0>;
		clocks = <&audiomix_clk IMX8MP_CLK_AUDIOMIX_SAI1_MCLK1>;
		clock-names = "mclk";
		reg = <0x18>;
	};
};

/* Limit frequency on dev board due to long traces and bad signal integrity */
&usdhc2 {
	max-frequency = <100000000>;
};

&wm8904_1a {
	status = "disabled";
};
